<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/imageViewNotif"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_notif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/titleEventNotif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text=" Titre de l'event"
            android:textSize="15dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/descriptionEventNotif"
            android:layout_marginLeft="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:inputType="textMultiLine"
            android:text=" Titre de l'event Titre de l'event Titre de l'event Titre de l'event Titre de l'event Titre de l'event Titre de l'event "
            android:textSize="15dp" />
    </LinearLayout>



</LinearLayout>
